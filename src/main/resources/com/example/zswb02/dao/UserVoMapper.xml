<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.zswb02.dao.UserVoMapper">
    <resultMap id="BaseResultMap" type="com.example.zswb02.bean.UserVo">
        <!--@mbg.generated-->
        <!--@Table users-->

        <result column="user_email" jdbcType="VARCHAR" property="userEmail" />
        <result column="user_password" jdbcType="VARCHAR" property="userPassword" />

    </resultMap>

    <select id="selectUser" parameterType="com.example.zswb02.bean.UserVo" resultMap="BaseResultMap">

        select * from users
        where user_email = #{userEmail} and user_password=#{userPassword}
    </select>

    <update id="updatePassword"  parameterType="string">

        update users set user_password=#{param2,jdbcType=VARCHAR}  where user_email = #{param1,jdbcType=VARCHAR};

    </update>

</mapper>